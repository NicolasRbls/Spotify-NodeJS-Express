<!DOCTYPE html>
<html>
<head>
  <title>{{ title }}</title>
  <link rel="stylesheet" href="https://unpkg.com/retro.css">
  <style>
    .music-player {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
      text-align: center;
    }
    .music-player img {
      width: 150px;
      margin-bottom: 20px;
    }
    .controls {
      display: flex;
      gap: 20px;
      margin-top: 20px;
    }
    .controls button {
      padding: 10px 20px;
      font-size: 16px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <div class="music-player">
    <img src="/images/music-note.png" alt="Note de musique">
    <h1>{{ track.title }}</h1>
    <p>Artiste : {{ track.artist }}</p>
    <p>Durée : {{ track.duration }} secondes</p>
    <audio id="audio-player" src="/music/play/{{ track.id }}" controls></audio>
    <div class="controls">
      <button onclick="playMusic()">Play</button>
      <button onclick="pauseMusic()">Pause</button>
      <button onclick="goBack()">Précédent</button>
    </div>
  </div>
  <script>
    const audio = document.getElementById('audio-player');

    function playMusic() {
      audio.play();
    }

    function pauseMusic() {
      audio.pause();
    }

    function goBack() {
      window.history.back();
    }
  </script>
</body>
</html>
